<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="@dimen/dp_13"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/dark_gray"
                android:text="@string/buybut"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivclose"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                android:src="@drawable/buyclose"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colord9d9d9"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colordf5f5f5"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/buy_linlayoutborder_sel"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:text="@string/buyVIP"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colore6b6b6b"
                    android:text="@string/buymonto"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    />
                <TextView
                    android:paddingLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colore48581"
                    android:text="比直接购买书省23.72元"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/buy_linlayoutborder_nosel"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:text="@string/buynow"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvcomname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colore6b6b6b"
                    android:text="水土保持综合治理 规划通则.pdf"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_10"
            >
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:text="@string/bookmoney"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvprice"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colore48581"
                android:text="10元"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textColor="@color/busy_indicator"
                android:text="@string/buyTips"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--<TextView-->
            <!--android:id="@+id/tv_payPage_payType"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="@dimen/margin_10"-->
            <!--android:text="支付方式:"-->
            <!--android:textSize="@dimen/sp_14"-->
            <!--/>-->
        <RelativeLayout
            android:id="@+id/rl_payPage_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"

            >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_payPage_aliPay"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/ic_alipay" />
            <TextView
                android:id="@+id/tv_payPage_aliPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_toRightOf="@+id/iv_payPage_aliPay"
                android:text="支付宝支付"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />
            <CheckBox
                android:checked="true"
                android:theme="@style/checkBoxStyle"
                android:textColor="@color/colore48581"
                android:id="@+id/checkbox_payPage_aliPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colord9d9d9"
            />
        <RelativeLayout
            android:id="@+id/rl_payPage_weChatPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
           >
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_payPage_wechatPay"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/ic_wechat_pay" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_payPage_wechatPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_payPage_wechatPay"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_toRightOf="@+id/iv_payPage_wechatPay"
                android:text="微信支付"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />
            <CheckBox
                android:id="@+id/checkbox_payPage_weChat"
                android:layout_width="wrap_content"
                android:textColor="@color/colore48581"
                android:layout_height="wrap_content"
                android:theme="@style/checkBoxStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colord9d9d9"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_50"
        android:paddingRight="@dimen/dp_50"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        >
        <Button
            android:id="@+id/btpay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:text="@string/gotoBuy"
            android:textColor="@color/white"
            android:background="@drawable/buy_buttonl"
            />
    </LinearLayout>
</LinearLayout>